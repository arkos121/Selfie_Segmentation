<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="1dp"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="end"
        android:background="@android:color/system_surface_container_high_light"
        android:hint="@string/enter_the_number"
        android:textAlignment="viewEnd"
        android:textSize="42sp" />
<LinearLayout
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/del"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/dele"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient1"
            android:text="del"
            android:textSize="50dp"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/r1"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_below="@+id/e1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="1"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="2"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="3"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/badd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="+"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r2"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_below="@+id/e1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="4"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="5"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="6"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bsub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="-"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/r3"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_below="@+id/r2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="7"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="8"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="9"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bmul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="*"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/r4"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_below="@+id/e1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="0"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/C"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="C"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/divs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="/"
            android:textSize="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/ans"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:text="="
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout></LinearLayout>